<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_purple"
    android:padding="10dp"
    tools:context=".activities.NewNoteActivity">

    <EditText
        android:id="@+id/editDate"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Dia"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/editRate" />

    <EditText
        android:id="@+id/editDatem"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Mês"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/editDate" />

    <EditText
        android:id="@+id/editDatey"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Ano"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editDatem" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="9dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="/"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/editDatem"
        app:layout_constraintTop_toTopOf="@+id/editDate" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="9dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="/"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/editDatey"
        app:layout_constraintTop_toTopOf="@+id/editDatem" />

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Escreva o título aqui"
        android:inputType="textPersonName|textCapSentences"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRate" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Escreva seu texto aqui"
        android:inputType="textMultiLine|textCapSentences"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTitle" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/editDate"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/condehappy" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/condelogo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Avalie seu dia:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <EditText
        android:id="@+id/editRate"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:hint="0 - 10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Data:"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/editDatem"
        app:layout_constraintEnd_toEndOf="@+id/editDatey"
        app:layout_constraintStart_toStartOf="@+id/editDate" />

</androidx.constraintlayout.widget.ConstraintLayout>